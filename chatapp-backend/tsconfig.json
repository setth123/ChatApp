{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "commonjs",                      
    "rootDir": "src",                          
    "outDir": "dist",                          
    "strict": true,                            
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,                      
    "moduleResolution": "node",                
    "resolveJsonModule": true,                 
    "types": ["node", "express"],              
    "noImplicitAny": true                      
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
